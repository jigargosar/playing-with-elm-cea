{
  "name": "elm-ever-share",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "firebase": "^5.5.5",
    "ramda": "^0.25.0",
    "tachyons": "^4.11.1"
  },
  "now": {
    "alias": [
      "elm-ever-share",
      "https://elm-ever-share.functional-programmer.com"
    ],
    "type": "static",
    "static": {
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  },
  "scripts": {
    "start": "nodemon -w yarn.lock -w elm.json -x env ELM_DEBUGGER=true elm-app start",
    "build": "elm-app build",
    "deploy": "now && now alias"
  },
  "devDependencies": {
    "cli-spinners": "^1.3.1",
    "got": "^9.3.0",
    "husky": "^1.1.2",
    "inquirer": "^6.2.0",
    "inquirer-search-checkbox": "^1.0.0",
    "keyv-file": "^0.1.7",
    "lint-staged": "^7.3.0",
    "ora": "^3.0.0",
    "prettier": "^1.14.3",
    "shelljs": "^0.8.2",
    "teen_process": "^1.14.0"
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "printWidth": 80
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --config package.json --write",
      "git add"
    ]
  }
}
